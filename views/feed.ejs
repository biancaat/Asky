<%- include('partials/header') -%>
<body class="index-page">
<!-- Navbar for profile -->
<nav class="navbar navbar-expand-lg fixed-top navbar-transparent " color-on-scroll="100">
  <div class="container">
    <div class="navbar-translate">
      <a class="navbar-brand" href="../" rel="tooltip">
        <span>ASKY•</span> Here to Help
      </a>
      <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-bar bar1"></span>
        <span class="navbar-toggler-bar bar2"></span>
        <span class="navbar-toggler-bar bar3"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse justify-content-end" id="navigation">
      <div class="navbar-collapse-header">
        <div class="row">
          <div class="col-6 collapse-brand">
            <a>
              ASKY•
            </a>
          </div>
          <div class="col-6 collapse-close text-right">
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
              <i class="tim-icons icon-simple-remove"></i>
            </button>
          </div>
        </div>
      </div>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="btn btn-info " href="/logout">Log Out</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Table  -->

<!-- <br><br><br><br><br><br> -->
<div class="container mx-auto mt-28 px-5 py-0 w-5/6 h-full bg-gray-600 bg-opacity-25 ">
  <table class="table">
      <thead>
          <tr>
              <th>Date</th>
              <th>Patient</th>
              <th>Inquery</th>
              <th class="text-right">View</th>
          </tr>
      </thead>
      <tbody>
         
        <% for(var i=0; i<posts.length; i++) {%>
          <tr >
              <td> <%= posts[i].createdAt.toString().slice(0,16) %></td>
              <td> <%= posts[i].createdBy %></td>
              <td> <%= posts[i].caption.split(' ').slice(0,8).join(' ')+'...' %></td>
              <td class="td-actions text-right del">
                <a href="/post/<%= posts[i]._id%>">
                  <button type="submit" rel="tooltip" class="btn btn-info btn-simple btn-icon btn-sm" id="remove">
                    <i class="tim-icons icon-single-02"></i>
                  </button>
                </a>
              </td>
          </tr>
          <% } %>
      </tbody>
  </table>
</div>

</body>

 
